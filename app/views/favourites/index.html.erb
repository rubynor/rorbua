<div class ="container">

  <br>
  <div class="row">

    <div class="col-0 col-md-2 p-0 m-0">
    </div>

    <div class="col">

      <h2> <%= t('.title') %></h2>

      <strong><%= current_user.username %></strong>

      <div id="favourites_counter" class="mb-3">
        <%= render 'favourites_counter' %>
      </div>

      <div id="favourites">
        <% @favourites.each do |favourite| %>
          <%= render favourite %>
        <% end %>
      </div>

      <div class="col-0 col-md-2 p-0 m-0">
      </div>

    </div>

  </div>
</div>