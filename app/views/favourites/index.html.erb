<div class ="container">
<%= link_to "Back", :back, class: "btn btn-secondary" %>
  <br>
  <br>
  <h1>Favourites</h1>
  <br>
  <p> <strong>
        <%= current_user.username %>
      </strong>
  </p>
  <p> <strong>
      <%= @favourites.size %> Videos
    </strong>
  </p>
  <div id="favourites">
    <% @favourites.each do |favourite| %>
      <% story = favourite.story %>
      <%= link_to story do%>
        <div class="row">
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <!-- <img src="..." class="img-fluid rounded-start" alt="..."> -->
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= story.title %></h5>
                  <p class="card-title"><%= story.user.username %></p>
                  <p class="card-text" ><small class="text-muted">Uploaded <%= time_ago_in_words(story.created_at) %> ago </small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= button_to "Remove from favourites", favourite, method: :delete %>
    <% end %>
  </div>
</div>