<div class="text-center">
  <br>

  <div class="mb-4">
    <% if @user.user_image.attached? %>
      <%= image_tag url_for(@user.user_image), alt: "Image", class: "profile-img" %>
    <% else %>
      <%= image_tag "user.png" %>
    <% end %>
  </div>

  <div class="mb-3">
    <h3> <%= @user.username %> </h3>
    <p> <%= @user.stories.size %> <%= "story".pluralize(@user.stories.size) %> </p>
  </div>

  <div class="mb-3">
    <% if @user == current_user %>
      <%= link_to "Endre min konto",  edit_user_registration_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>



<div class="container-fluid">

  <div class="row py-2">
    <div class="col">
      <h2>Opplastninger</h2>
    </div>
    <div class="col text-end">
      <% if @playlist.playlist_stories.count > 0 %>
        <%= link_to "Spill av alle", playlist_play_story_path(@playlist, @playlist.playlist_stories.last), class:"btn btn-primary" %>
      <% else %>
        <h5>Denne spillelisten er tom</h5>
        <%= link_to "Utforsk stories", root_path, class:"btn btn-secondary my-3" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @playlist.playlist_stories.reverse_each do |playlist_story| %>
      <%= render "playlists/partials/story_card", playlist_story: playlist_story %>
    <% end %>
  </div>

</div>

