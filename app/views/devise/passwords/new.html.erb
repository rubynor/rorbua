

<div class="container">
  <div class="row">

    <div class="col-0 col-md-2 p-0 m-0">
    </div>

    <div class="col">
      <h2> <%= t(".title") %> </h2>

      <%= form_for(resource, as: resource_name, data: { turbo: false}, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
          <%= error_message_on(f.object, :email) %>
        </div>

        <div class="mb-3">
          <%= f.submit t(".send_me_instructions"), :class => 'btn btn-primary btn-block' %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <div class="col-0 col-md-2 p-0 m-0">
    </div>

  </div>
</div>