<div class="container">
  <div class="row">

    <h2>Registrer</h2>
    <%= form_for(resource, as: resource_name, data: { turbo: false}, url: registration_path(resource_name)) do |f| %>

      <div class="mb-3">
        <%= f.label :username, "Brukernavn" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "Username", class: "form-control"%>
        <%= error_message_on(f.object, :username) %>
      </div>

      <div class="mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= error_message_on(f.object, :email) %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Passord" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> tegn minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        <%= error_message_on(f.object, :password) %>
      </div>

      <div class="mb-5">
        <%= f.label :password_confirmation, "Bekreft passord" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
        <%= error_message_on(f.object, :password_confirmation) %>
      </div>

      <div class="mb-4">
        <%= f.submit 'Registrer', :class => 'btn btn-primary btn-block' %>
      </div>

      <div class="mb-3">
        <p>Har du allerede en konto? <%= render "devise/shared/links" %><p>
      </div>

    <% end %>

  </div>
</div>










