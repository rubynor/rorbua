<div class="container small-container">
  <div class="row">

    <h2>Registrer</h2>
    <%= form_for(resource, as: resource_name, data: { turbo: false}, url: registration_path(resource_name)) do |f| %>

      <div class="mb-3">
        <%= f.label :usernamet, t(".username") %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "Username", class: "form-control"%>
        <%= error_message_on(f.object, :username) %>
      </div>

      <div class="mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= error_message_on(f.object, :email) %>
      </div>

      <div class="mb-3">
        <%= f.label :password, t(".password") %>
        <br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control",placeholder: "#{@minimum_password_length} #{t(".letters_minimum")}" %>
        <%= error_message_on(f.object, :password) %>
      </div>

      <div class="mb-5">
        <%= f.label :password_confirmation, t(".confirm_password")  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
        <%= error_message_on(f.object, :password_confirmation) %>
      </div>

      <div class="mb-4">
        <%= f.submit 'Registrer', :class => 'btn btn-primary btn-block' %>
      </div>

      <div class="mb-3">
        <p> <%= t(".already_have_an_account") %> <%= render "devise/shared/links" %> <p>
      </div>

    <% end %>

  </div>
</div>
