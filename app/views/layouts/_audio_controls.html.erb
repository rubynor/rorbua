<%= content_for :audio_controls do %>
  <div class="container-lg fixed-bottom text-center p-3">

    <div class="controls px-2 py-2">

      <button id="button_prev">
        <span class="material-icons" style="color: white">skip_previous</span>
      </button>

      <button id="button_toggle">
        <span class="material-icons" style="color: white">play_arrow</span>
      </button>

      <button id="button_next">
        <span class="material-icons" style="color: white">skip_next</span>
      </button>

    </div>

  </div>
<% end %>