<div id="playlist-form">
  <%= form_with(model: playlist) do |form| %>

    <div class="mb-3">
      <%= form.label :title, "Tittel", class: "form-label" %>
      <%= form.text_field :title, autofocus:true, class: "form-control" %>
      <%= error_message_on(form.object, :title) %>
    </div>

    <div class="mb-3 ms-4" hidden>
      <%= form.check_box :public, class:"form-check-input", checked: true %>
      <%= form.label :public, "Offentlig", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= form.check_box :display, checked:true, hidden: true %>
    </div>

    <div class="mb-4">
      <%= form.submit "Opprett spilleliste", class: 'btn btn-primary btn-block' %>
    </div>

  <% end %>
</div>