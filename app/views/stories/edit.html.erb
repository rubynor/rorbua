<div id="stories" class="feed_stories_container">

  <div class="container">
    <div class="row">

      <h1>Editing story</h1>

      <%= render "form", story: @story %>

      <div class="mb-4">
        <%= button_to "Delete story", @story, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}},
                      class: "btn btn-secondary btn-block" %>
      </div>

      <div>
        <%= link_to "Show this story", @story %> |
        <%= link_to "Back to stories", stories_path %>
      </div>

    </div>
  </div>

</div>

<script>
  var fileinput = document.getElementById("file_input");
  fileinput.style = "display: none";
</script>