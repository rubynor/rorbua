<%= link_to "Back", :back, class: "btn btn-secondary" %>
<br>
<br>
<h1>My stories</h1>
<br>
<% @stories.each do |story| %>

  <div class="row">

    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <!-- <img src="..." class="img-fluid rounded-start" alt="..."> -->
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=  link_to story.title, story, class:"card-title" %></h5>
            <p class="card-title"><%= story.user.username %></p>
            <p class="card-text" ><%= story.description %></p>
            <p class="card-text" ><small class="text-muted">Uploaded <%= story.created_at %></small></p>
          </div>
        </div>
      </div>
    </div>

  </div>

<% end %>