<div id="<%= dom_id story %>" class="feed_story">

  <div class="card">
    <!-- <img src="..." class="card-img-top" alt="..."> -->
    <!-- Fjern denne if-setninga nÃ¥r vi har implementert rapportering av innlegg -->

      <li class="dropdown position-absolute top-0 end-0 mt-1" style="list-style-type: none;">
        <a href="#" class="nav-link" data-bs-toggle="dropdown" role="button" aria-expanded="false">
          <span class="material-icons" style="color:black;">more_vert</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end me-1">
          <% if user_signed_in? %>
            <!-- Edit story button -->
            <% if current_user.id == story.user_id %>
              <li>
                <%= link_to "Endre story", edit_story_path(story), class: "dropdown-item" %>
              </li>
            <% end %>

            <li><%= %></li>

          <% else %>
            <li class="dropdown-item">Legg til i spilleliste</li>
          <% end %>
        </ul>
      </li>
    <!-- Og fjern denne end taggen -->
    <div class="card-body px-5">
      <h5 class="card-title"><%= story.title %></h5>
      <p class="card-text"><%= story.user.username %></p>
      <p class="card-text"><%= story.description %></p>

      <!-- signed in -->
      <div class="row d-flex align-items-top justify-content-center">

          <!-- like og dislike buttons -->
          <div class="col-3 col-md">
            <div id="<%= "#{dom_id story}_like_btn" %>">
              <%= render "likes/like_button", story: story %>
            </div>
          </div>

        <div class="col-3 col-md">
          <div id="<%= "#{dom_id story}_dislike_btn" %>">
            <%= render 'dislikes/dislike_button', story: story %>
          </div>
        </div>



        <div class="col-3 col-md">

          <div class="d-flex flex-column p-1">
            <div class="btn-group dropdown">
              <span type="button" class="btn btn-secondary material-icons" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false" style="color:black;background-color: transparent; border: none">
                playlist_add
              </span>
              <ul class="dropdown-menu dropdown-menu-end">
                <li class="dropdown-header"><h6>Legg til i spilleliste</h6></li>
                <li id="new_playlist" class="dropdown-item">Ny spilleliste</li>
                <li><hr class="dropdown-divider"></li>
                <% current_user.playlists.each do |playlist| %>
                  <li class="dropdown-item" data-bs-toggle="dropdown">
                    <%= button_to playlist.title, playlist_stories_path(story_id: story, playlist_id: playlist), class:"dropdown-item" %>
                  </li>
                <% end %>
              </ul>
            </div>
            <p>Lagre</p>
          </div>


        </div>

      </div>
      <br>
      <p class="card-text"><small class="text-muted">Lastet opp <%= story.created_at %></small></p>
    </div>
  </div>

</div>


