<div id="<%= dom_id story %>" class="feed_story">

  <div class="card mb-3">
    <%= link_to "Back", :back, class: "btn btn-success" %>
    <!-- <img src="..." class="card-img-top" alt="..."> -->
    <div class="card-body">
      <h5 class="card-title"><%= story.title %></h5>
      <p class="card-text"><%= story.user.username %></p>
      <p class="card-text"><%= story.description %></p>
      <audio controls>
        <source src="<%= rails_blob_url(story.story_file) %>">
      </audio>

      <!-- signed in -->
      <div class="row">
        <% if user_signed_in? %>

          <div class="col">
            <!-- Favorite button -->
            <div id="<%= "#{dom_id story}_favourite_btn" %>">
              <%= render 'favourites/favourite_btn', story: story %>
            </div>
          </div>

          <!-- like og dislike buttons -->
          <div class="col">
            <div id="<%= "#{dom_id story}_like_btn" %>">
              <%= render "likes/like_button", story: story %>
            </div>
          </div>

          <div class="col">
            <div id="<%= "#{dom_id story}_dislike_btn" %>">
              <%= render 'dislikes/dislike_button', story: story %>
            </div>
          </div>

          <!-- Edit story button -->
          <% if current_user.id == story.user_id %>
            <%= link_to "Edit this story", edit_story_path(story) %>
          <% end %>

          <!-- not signed in -->
        <% else %>

          <%= button_to "Like", likes_path, params: { like: {story_id: story.id }}, method: :post, remote: true %>
          <%= button_to "Dislike", dislikes_path, params: { dislike: {story_id: story.id }}, method: :post, remote: true %>
          <%= button_to 'Add to Favorites', favourites_path(story_id: story) %>

        <% end %>
      </div>


      <p class="card-text"><small class="text-muted">Lastet opp <%= story.created_at %></small></p>
    </div>
  </div>

</div>


