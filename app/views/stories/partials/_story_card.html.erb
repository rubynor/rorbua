<div class="card mb-3 mt-1">
  <%= link_to play_path story do %>
    <div class="row g-0">

      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= story.title %></h5>
          <p class="card-title"><%= story.user.username %></p>
          <p class="card-text" ><small class="text-muted">Lastet opp <%= time_tag(story.created_at) %></small></p>
        </div>
      </div>

    </div>
  <% end %>
</div>